<section id="viewhotelDetails">
    <h2>Details</h2>
    <div class="hotel-ticket">
        <div class="hotel-left">
            <img src="{{imgUrl}}"alt="picture of a hotel">
        </div>
        <div class="hotel-right">
            <div>
                <h3>{{hotel}}</h3>
            </div>
            <div>
                {{city}}
            </div>
            <p><span >Free rooms: {{freeRooms}}</span> </p>
            {{#if isCreator}}
            <a href="/products/{{_id}}/edit" class="edit">Edit</a>
            <a href="/products/{{_id}}/delete" class="remove">Delete</a>
            {{else}}
            {{#if alreadyBooked}}
            <p><span class="green">You already have booked a room</span> </p>
            {{else}}
            <a href="/products/{{_id}}/book" class="book">Book</a>
            {{/if}}
            {{/if}}
            
        </div>
    </div>
</section>